<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorBackground"
                                                   tools:context=".AuthFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
                  android:text="@string/app_name" android:textColor="@color/colorFont" android:textSize="20sp"/>
        <LinearLayout android:layout_marginTop="20pt" android:orientation="vertical" android:layout_gravity="center" android:padding="10pt" android:background="@color/colorBox"
                      android:layout_width="150pt" android:layout_height="wrap_content">
            <TextView android:textColor="@color/colorFont" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Email:"/>
            <EditText android:background="@color/colorInput" android:layout_marginTop="5dp" android:padding="10dp" android:hint="my email..." android:textColorHint="@color/colorFont" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:textColor="@color/colorFont" android:inputType="text"/>



            <TextView android:textColor="@color/colorFont" android:layout_marginTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Password:"/>
            <EditText android:background="@color/colorInput" android:layout_marginTop="5dp" android:padding="10dp"  android:textColor="@color/colorFont" android:textColorHint="@color/colorFont" android:hint="my password..." android:layout_width="match_parent" android:layout_height="wrap_content" />

            <Button android:layout_marginTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/colorBtn" android:textColor="@color/colorFont" android:text="Login" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>