<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorBackground"
                                                   tools:context=".sentiments.SentimentsActivity">

    <ImageView android:layout_width="match_parent"
               android:src="@drawable/photo_and_text"
               android:layout_marginTop="20dp"
               android:id="@+id/image1"
               android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content" android:gravity="center" android:layout_height="wrap_content"
              android:text="The Sentiment are  discussed by user." android:textColor="@color/colorFont"
              android:id="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/image1"
              app:layout_constraintStart_toStartOf="@+id/image1"
              app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="20dp"
              app:layout_constraintTop_toBottomOf="@+id/image1" android:layout_marginEnd="8dp"/>


    <FrameLayout android:id="@+id/frameSentimentParants1" android:layout_width="300dp" android:layout_height="200dp"
                 android:background="@drawable/shape_box"
                 app:layout_constraintEnd_toEndOf="@+id/textView"
                 app:layout_constraintStart_toStartOf="@+id/textView"
                 android:layout_marginTop="30dp"
                 app:layout_constraintTop_toBottomOf="@+id/textView"></FrameLayout>


    <FrameLayout android:id="@+id/frameSentimentParants2"
                 app:layout_constraintStart_toStartOf="@id/frameSentimentParants1"
                 app:layout_constraintEnd_toEndOf="@id/frameSentimentParants1" android:background="@drawable/shape_box"
                 android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@id/frameSentimentParants1"
                 android:layout_width="300dp" android:layout_height="wrap_content"></FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>