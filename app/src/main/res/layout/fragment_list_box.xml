<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="@color/colorBox"
                android:layout_height="match_parent" >



    <HorizontalScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

        <LinearLayout
                android:id="@+id/layoutScroll"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/colorBox"
                android:layout_margin="10dp"
                android:orientation="horizontal" >
            <Button android:layout_width="200dp" android:id="@+id/btnGood" android:layout_margin="10dp"  android:text="good comments" android:background="@drawable/shape_btn_good" android:layout_height="200dp"/>

            <Button android:layout_width="200dp" android:id="@+id/btnNeu" android:layout_margin="10dp"  android:text="neutral comments" android:background="@drawable/shape_btn_neu" android:layout_height="200dp"/>

            <Button android:layout_width="200dp" android:id="@+id/btnNeg" android:layout_margin="10dp"  android:text="neg comments" android:background="@drawable/shape_btn_neg" android:layout_height="200dp"/>

        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>

